@model IList<VertoTestProject.Models.Content>;
@{
    ViewData["Title"] = "Home Page";
}

<!--Define a vertical grid for the content-->
<!--Each row will hold a section of content-->
<div class="grid-y">
    <!--1st Row will hold the main splash image-->
    <!--Apply full to stretch image-->
    <div class="grid-container full">
        <div class="grid-x" style="padding-bottom: 1%;">
            <img src="~/images/bigimage.jpg">
        </div>
    </div>
    <!--Apply a container to control width of rest of content-->
    <div class="grid-container" style="max-width :70%;">
        <!--2nd Row holds Title, Image and Button to New Products, Field Events, Latest News ect.-->
        
        <!--Display table of contents to check service works-->
        
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">ImageURL</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var content in Model)
                {
                    <tr>
                        <td>@content.Title</td>
                        <td>@content.ImageURL</td>
                        <td>@content.Description</td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>